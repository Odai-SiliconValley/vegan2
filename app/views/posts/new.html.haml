%body
  %header
    .header-logo
      = link_to("VEGAN", "/")
    %ul.header-menus
      %li
        = link_to("VEGANとは", "/about")
      %li
        = link_to("投稿一覧", "/posts/index")
      %li
        = link_to("新規投稿", "/posts/new")
      %li
        = link_to("ユーザー一覧", "/users/index")
      %li
        = link_to("新規登録", "/signup")
  .main.posts-new
    .container
      %h1.form-heading 投稿
      = form_tag("/posts/create") do
        .form
          .form-body
            %textarea{:name => "content"}
            %input{:type => "submit", :value => "投稿"}