%body
  %header
    .header-logo
      = link_to("VEGAN", "/")
    %ul.header-menus
      - if @current_user
        %li
          = link_to(@current_user.name, "/user/#{@current_user.id}")
        %li
          = link_to("投稿一覧", "/posts/index")
        %li
          = link_to("新規投稿", "/posts/new")
        %li
          = link_to("ユーザー一覧", "/users/index")
        %li
          = link_to("ログアウト", "/logout", {method: :post})
      - else
        %li
          = link_to("VEGANとは", "/about")
        %li
          = link_to("新規登録", "/signup")
        %li
          = link_to("ログイン", "/login")

  - if flash[:notice]
    .flash
      = flash[:notice]
      
  .main.posts-show
    .container
      .posts-show-item
        %p 
          = @post.content
        .post-time
          = @post.created_at
        .post-menus
          = link_to("編集", "/posts/#{@post.id}/edit")
          = link_to("削除", "/posts/#{@post.id}/destroy", {method:"post"})