%body
  %header
    .header-logo
      = link_to("VEGAN", "/")
    %ul.header-menus
      %li
        = link_to("VEGANとは", "/about")
      %li
        = link_to("投稿一覧", "/posts/index")
      %li
        = link_to("新規投稿", "/posts/new")
  .main.posts-show
    .container
      .posts-show-item
        %p 
          = @post.content
        .post-time
          = @post.created_at
        .post-menus
          = link_to("編集", "/posts/#{@post.id}/edit")
          = link_to("削除", "/posts/#{@post.id}/destroy", {method:"post"})