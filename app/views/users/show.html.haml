%body
  %header
    .header-logo
      = link_to("VEGAN", "/")
    %ul.header-menus
      - if @current_user
        %li
          = link_to(@current_user.name, "/user/#{@current_user.id}")
        %li
          = link_to("投稿一覧", "/posts/index")
        %li
          = link_to("新規投稿", "/posts/new")
        %li
          = link_to("ユーザー一覧", "/users/index")
        %li
          = link_to("ログアウト", "/logout", {method: :post})
      - else
        %li
          = link_to("VEGANとは", "/about")
        %li
          = link_to("新規登録", "/signup")
        %li
          = link_to("ログイン", "/login")

  - if flash[:notice]
    .flash
      = flash[:notice]

  .main.user-show
    .container
      .user
        %img{:src => "/user_images/#{@user.image_name}"}/
        %h2= @user.name
        %p= @user.email
        = link_to("編集", "/users/#{@user.id}/edit")