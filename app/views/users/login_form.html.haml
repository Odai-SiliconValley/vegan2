%body
  %header
    .header-logo
      - if @current_user
        = link_to("VEGAN", "/posts/index")
      - else 
        = link_to("VEGAN", "/")
    %ul.header-menus
      - if @current_user
        %li
          = link_to(@current_user.name, "/users/#{@current_user.id}")
        %li
          = link_to("投稿一覧", "/posts/index")
        %li
          = link_to("新規投稿", "/posts/new")
        %li
          = link_to("ユーザー一覧", "/users/index")
        %li
          = link_to("ログアウト", "/logout", {method: :post})
      - else
        %li
          = link_to("VEGANとは", "/about")
        %li
          = link_to("新規登録", "/signup")
        %li
          = link_to("ログイン", "/login")

  - if flash[:notice]
    .flash
      = flash[:notice]

  .main.users-new
    .container
      .form-heading ログイン
      .form.users-form
        .form-body
          - if @error_message
            .form-error
              = @error_message
          = form_tag("/login") do
            %p メールアドレス
            %input{:name => "email", :value => "#{@email}"}/
            %p パスワード
            %input{:type => "password", :name => "password", :value => "#{@password}"}/
            %input{:type => "submit", :value => "ログイン"}/
